    <style>
        /* ========================================
           CLEAN PROFESSIONAL GALLERY
           ======================================== */
        
        .gallery-page {
            background: #fff;
        }

        /* Hero Section */
        .gallery-hero {
            padding: 100px 60px 80px;
            background: #fafafa;
            border-bottom: 1px solid #eee;
        }

        .gallery-hero-inner {
            max-width: 900px;
            margin: 0 auto;
        }

        .gallery-hero h1 {
            font-size: 42px;
            font-weight: 800;
            color: #ffffff;
            font-family: 'Science Gothic', sans-serif;
            margin-bottom: 24px;
            letter-spacing: -0.5px;
        }

        .gallery-intro {
            font-size: 17px;
            color: #555;
            line-height: 1.7;
            margin-bottom: 16px;
        }

        .gallery-stats {
            display: flex;
            gap: 40px;
            margin-top: 32px;
            padding-top: 24px;
            border-top: 1px solid #e0e0e0;
        }

        .stat-item {
            text-align: left;
        }

        .stat-number {
            font-size: 28px;
            font-weight: 800;
            color: #0e4c80;
            font-family: 'Science Gothic', sans-serif;
            display: block;
        }

        .stat-label {
            font-size: 13px;
            color: #888;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Filter Section */
        .gallery-filter-section {
            padding: 0;
            background: #fff;
            position: sticky;
            top: 0;
            z-index: 100;
            border-bottom: 1px solid #eee;
        }

        .gallery-filters {
            display: flex;
            justify-content: center;
            gap: 0;
            max-width: 1400px;
            margin: 0 auto;
        }

        .filter-btn {
            padding: 20px 40px;
            background: transparent;
            border: none;
            color: #888;
            font-size: 13px;
            font-weight: 600;
            font-family: 'Science Gothic', sans-serif;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            cursor: pointer;
            transition: color 0.3s ease;
            position: relative;
        }

        .filter-btn::after {
            content: '';
            position: absolute;
            bottom: 0;
            left: 50%;
            transform: translateX(-50%);
            width: 0;
            height: 2px;
            background: #0e4c80;
            transition: width 0.3s ease;
        }

        .filter-btn:hover {
            color: #333;
        }

        .filter-btn.active {
            color: #0e4c80;
        }

        .filter-btn.active::after {
            width: 40px;
        }

        /* Gallery Container */
        .gallery-container {
            padding: 40px;
            max-width: 1600px;
            margin: 0 auto;
        }

        /* Gallery Grid - Clean 3 column */
        .gallery-grid {
            display: grid;
            grid-template-columns: repeat(3, 1fr);
            gap: 20px;
        }

        /* Gallery Item - No rounded corners */
        .gallery-item {
            position: relative;
            overflow: hidden;
            aspect-ratio: 4/3;
            cursor: pointer;
            background: #f5f5f5;
        }

        .gallery-image-wrapper {
            width: 100%;
            height: 100%;
            position: relative;
        }

        .gallery-image {
            width: 100%;
            height: 100%;
            object-fit: cover;
            transition: transform 0.5s ease;
            border-radius: 0 !important;
        }

        .gallery-item:hover .gallery-image {
            transform: scale(1.03);
        }

        /* Simple Overlay */
        .gallery-overlay {
            position: absolute;
            left: 0;
            bottom: 0;
            width: 100%;
            padding: 24px 0 24px 0;
            background: linear-gradient(to top, rgba(0,0,0,0.7) 0%, rgba(0,0,0,0) 100%);
            opacity: 0;
            transition: opacity 0.3s ease;
            display: flex;
            flex-direction: column;
            align-items: center;
            justify-content: flex-end;
            text-align: center;
        }

        .gallery-item:hover .gallery-overlay {
            opacity: 1;
        }

        .gallery-overlay h3 {
            color: white;
            font-size: 16px;
            font-weight: 600;
            font-family: 'Science Gothic', sans-serif;
            margin-bottom: 4px;
        }

        .gallery-overlay span {
            color: rgba(255,255,255,0.7);
            font-size: 12px;
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        /* Hidden items for filtering */
        .gallery-item.hidden {
            display: none;
        }

        /* Lightbox - Clean design */
        .lightbox {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.95);
            z-index: 9999;
            display: flex;
            align-items: center;
            justify-content: center;
            opacity: 0;
            visibility: hidden;
            transition: all 0.3s ease;
        }

        .lightbox.active {
            opacity: 1;
            visibility: visible;
        }

        .lightbox-content {
            max-width: 90%;
            max-height: 85vh;
            position: relative;
        }

        .lightbox-image {
            max-width: 100%;
            max-height: 85vh;
            object-fit: contain;
        }

        .lightbox-info {
            position: absolute;
            bottom: -50px;
            left: 0;
            color: white;
        }

        .lightbox-title {
            font-size: 18px;
            font-weight: 600;
            font-family: 'Science Gothic', sans-serif;
            margin-bottom: 4px;
        }

        .lightbox-caption {
            font-size: 13px;
            color: rgba(255,255,255,0.6);
        }

        .lightbox-close {
            position: absolute;
            top: 30px;
            right: 30px;
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            opacity: 0.7;
            transition: opacity 0.3s;
            width: 44px;
            height: 44px;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .lightbox-close:hover {
            opacity: 1;
        }

        .lightbox-nav {
            position: absolute;
            top: 50%;
            transform: translateY(-50%);
            background: none;
            border: none;
            color: white;
            cursor: pointer;
            opacity: 0.6;
            transition: opacity 0.3s;
            padding: 20px;
        }

        .lightbox-nav:hover {
            opacity: 1;
        }

        .lightbox-prev {
            left: 20px;
        }

        .lightbox-next {
            right: 20px;
        }

        .lightbox-counter {
            position: absolute;
            bottom: 30px;
            left: 50%;
            transform: translateX(-50%);
            color: rgba(255,255,255,0.5);
            font-size: 13px;
            font-family: 'Science Gothic', sans-serif;
            letter-spacing: 2px;
        }

        /* Responsive */
        @media (max-width: 1200px) {
            .gallery-grid {
                grid-template-columns: repeat(2, 1fr);
            }
            
            .gallery-container {
                padding: 30px;
            }
        }

        @media (max-width: 768px) {
            .gallery-hero {
                padding: 80px 30px 60px;
            }
            
            .gallery-hero h1 {
                font-size: 32px;
            }
            
            .gallery-intro {
                font-size: 15px;
            }
            
            .gallery-stats {
                gap: 30px;
            }
            
            .stat-number {
                font-size: 24px;
            }
            
            .gallery-grid {
                grid-template-columns: repeat(2, 1fr);
                gap: 12px;
            }
            
            .gallery-container {
                padding: 20px;
            }
            
            .filter-btn {
                padding: 16px 24px;
                font-size: 11px;
            }
        }

        @media (max-width: 540px) {
            .gallery-grid {
                grid-template-columns: 1fr;
                gap: 16px;
            }
            
            .gallery-filters {
                flex-wrap: wrap;
            }
            
            .filter-btn {
                padding: 14px 18px;
            }
            
            .gallery-stats {
                flex-wrap: wrap;
                gap: 24px;
            }
            
            /* Additional mobile improvements - NO MARGIN */
            .gallery-filter-section {
                top: 70px; /* Adjust for mobile fixed menu */
            }
            
            .gallery-filters {
                overflow-x: auto;
                -webkit-overflow-scrolling: touch;
                flex-wrap: nowrap;
            }
            
            .gallery-filters::-webkit-scrollbar {
                display: none;
            }
            
            .filter-btn {
                flex-shrink: 0;
                min-height: 48px; /* Touch friendly */
            }
            
            .gallery-item {
                max-width: 100%;
            }
            
            .gallery-image {
                width: 100%;
                height: auto;
                max-height: 250px;
                object-fit: cover;
            }
            
            /* Lightbox mobile adjustments */
            .lightbox-close,
            .lightbox-nav {
                width: 44px;
                height: 44px;
                font-size: 20px;
            }
            
            .lightbox-content {
                max-width: 95%;
                max-height: 70vh;
            }
            
            .lightbox-image {
                max-height: 70vh;
            }
        }

        /* Footer spacing */
        .footer-simple {
            margin-top: 0;
        }
    </style>

